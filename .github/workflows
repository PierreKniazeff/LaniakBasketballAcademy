name: Trigger Jenkins Build

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  trigger-build:
    runs-on: ubuntu-latest
    steps:
    - name: Trigger Jenkins Job
      run: curl -X POST ${{ secrets.JENKINS_URL }}/JENKINS_URL/job/Laniak/build?token=117a8be5252ccb1f7919d00ed3c9431f50
      env:
        JENKINS_URL: ${{ secrets.JENKINS_URL }}
